<%- asset = @nice_asset if @nice_asset -%>
<tr>
  <td>
    <div class="asset">
      <%- if asset.image? -%>
        <%# link_to(image_tag(asset.public_filename(:icon)), asset.public_filename, :target => "_blank") %>
        <%= image_tag(asset.public_filename(:icon)) %>
        <%= hidden_field_tag :url, asset.public_filename(:icon), :id => nil %>
      <%- else -%>  
        <%= hidden_field_tag :url, asset.public_filename, :id => nil %>
      <%- end -%>
    </div>
  </td>
  <td><%= asset.filename %></td>
  <td class="date"><%= asset.created_at.to_date %></td>
  <td><%= asset.title %></td>
  <td class="delete"><span class="delete">Delete <%= hidden_field_tag :id, asset.id, :id => nil %></span></td>
</tr>
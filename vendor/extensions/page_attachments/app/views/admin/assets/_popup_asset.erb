<%- asset = @nice_asset if @nice_asset -%>
<tr>
  <td>
    <div class="asset">
      <%- if asset.image? -%>
        <%= image_tag(asset.public_filename(:icon)) %>
        <%= hidden_field_tag :url, asset.public_filename(:icon), :id => nil %>
      <%- else -%>  
        <%= hidden_field_tag :url, asset.public_filename, :id => nil %>
      <%- end -%>
      <%= hidden_field_tag :url_full, asset.public_filename, :id => nil %>
    </div>
  </td>
  <td><%= asset.filename %></td>
  <td class="date"><%= asset.created_at.to_date %></td>
  <td class="title"><%= asset.title %></td>
  <td class="actions">
    <div class="show">Show</div>
    <div class="delete">Delete</div>
    <%= hidden_field_tag :asset_id, asset.id, :id => nil %>
  </td>
</tr>
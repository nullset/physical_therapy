<% if collection.page_count != collection.first_page -%>
<div class="pagination">
  <ul>
  <% if collection.previous_page? -%>
         <li class="nextpage">
	    	    <%= link_to_remote('<span>&#171; previous</span>', {:url => { :page => collection.previous_page, :paginate => true }, :before => "Element.show('asset-browse-loading');"}, :class => 'previous') %>
	    	 </li>
	  <% else -%>
         <li class="disablepage previous"><span>&#171; previous</span></li>
	  <% end -%>
 
    <% last_page = 0 -%>
    <% windowed_pagination_links(collection, :window_size => 2, :link_to_current_page => true, :always_show_anchors => true) do |n| -%>
       <% if collection.page == n -%>
            <li class="currentpage"><%= n %></li>
       <% else -%>
	          <li><%= "&#8230;" if last_page+1 < n %>
	           <%= link_to_remote n, :url => {:id => params[:id], :page => n, :paginate => true}, :before => "Element.show('asset-browse-loading');" %>
	          </li>
	       <% end -%>
	      <% last_page = n -%>
	  <% end -%>
 
    <% if collection.next_page? -%>
     <li class="nextpage">
        <%=  link_to_remote('<span>next &#187;</span>', {:url => { :page => collection.next_page, :paginate => true }, :before => "Element.show('asset-browse-loading');"}, :class => 'next') %>
     </li>
    <% else -%>
      <li class="disablepage next"><span>next &#187;</span></li>
    <% end -%>
  </ul>
</div>
<% end -%>
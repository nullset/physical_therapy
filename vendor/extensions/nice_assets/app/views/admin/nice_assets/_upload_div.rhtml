<div id="upload_<%= id %>" style="<%= style %>" class="uploader">
	<% form_for :asset, :url => {:controller => 'admin/nice_assets', :action => 'create', :id => id, :page => page }, :html => { :multipart => true, :target => "frame_#{id}", :id => "upload-form-#{id}" } do |f| -%>
		<div>
			<label>File: <%= file_field_tag 'asset[uploaded_data]', :onblur => "delayUpload(#{id})", :id => "asset-file-#{id}", :class => 'asset-file' %></label>
			<%= text_field_tag 'asset[title]', nil, :onfocus => "removeBackgroundImage(this);", :onblur => "delayUpload(#{id})", :id => "asset-title-#{id}", :class => 'asset-title' %>
			<%= text_field_tag 'asset[description]', nil, :onfocus => "removeBackgroundImage(this);", :onblur => "delayUpload(#{id})", :id => "asset-description-#{id}", :class => 'asset-description' %>
			<label class="auto-upload"><input type="checkbox" id="asset-auto-upload-<%= id %>" checked="checked" onblur="if (this.checked == true) {delayUpload(<%= id %>)}" /> Auto upload</label>
			<input type="hidden" name="asset[created_by]" value="<%= session[:user] %>" />
		</div>
	<% end -%>
	<img src="/images/extensions/nice_assets/8-1.gif" alt="Uploading file &#8230;" style="display: none;" id="upload-image-<%= id %>" class="upload-image" />
	
	<iframe id='frame_<%= id %>' name="frame_<%= id %>"></iframe>
</div>
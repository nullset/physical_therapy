<% if asset_information.class.to_s == 'NiceAsset' %>
	<% if asset_information.basic_content_type == 'image' %>
		<% if asset_information.content_type =~ /svg/ %>
			<object data="<%= asset_information.public_filename %>" width="300" height="300" type="image/svg+xml"></object>
		<% else %>
		  <div id="asset-information-image"><%= image_tag asset_information.public_filename %></div>
		<% end %>
	<% else %>
	This file cannot be rendered inside your browser. <a href="<%= asset_information.public_filename %>">Download it instead?</a>
	<% end %>
	<dl id="asset-information-list">
		<dt>Filename</dt>
		<dd><%= asset_information.filename %></dd>
	<% if not asset_information.title.blank? %>
		<dt>Title:</dt>
		<dd><%= asset_information.title %></dd>
	<% end %>
	<% if not asset_information.description.blank? %>
		<dt>Description</dt>
		<dd><%= asset_information.description %></dd>
	<% end %>
	<% unless asset_information.width.blank? or asset_information.height.blank? %>
		<dt>Dimensions (width &times height)</dt>
		<dd><%= asset_information.width.to_i %> px &times; <%= asset_information.height.to_i %> px</dd>
	<% end %>
		<dt>Filesize</dt>
		<dd><%= (asset_information.size/1024).ceil.to_i %> Kb</dd>
		<dt>Uploaded</dt>
		<dd><%= asset_information.created_at.to_time %></dd>
	<% if not asset_information.user.nil? %>
		<dt>Uploaded by</dt>
		<dd><%= asset_information.user.name %></dd>
	<% end %>
	<% if not asset_information.pages.blank? %>
		<dt>Found on pages</dt>
		<dd>
			<ul>
		<% asset_information.pages.each do |page| %>
			<li>
				<div class="page-title"><%= link_to page.title,  page_edit_url(:id => page.id), :target => '_blank' %></div>
				<div class="page-url"><span>URL</span> <%= page.url %></div>
			</li>
		<% end %>
		</ul>
	<% end %>
	</dl>
	
<% elsif asset_information.class.to_s == 'Page' %>
	<% if asset_information.status.name == 'Published' %>
		<iframe src="<%= asset_information.url %>" width="300" height="300"></iframe>
	<% else %>
		This page is not yet published, and so cannot be viewed
	<% end %>
	<dl id="asset-information-list">
		<dt>Title</dt>
		<dd><%= asset_information.title %></dd>
		<dt>URL</dt>
		<dd><%= asset_information.url %></dd>
		<dt>Page status</dt>
		<dd><%= asset_information.status.name %></dd>
		<dt>Created</dt>
		<dd>
			<%= asset_information.created_at.to_time %>
			<% if not asset_information.created_by.nil? %>
				by <%= asset_information.created_by.name %></dd>
			<% end %>
		</dd>
		<dt>Last updated</dt>
		<dd>
			<%= asset_information.updated_at.to_time %>
			<% if not asset_information.updated_by.nil? %>
				by <%= asset_information.updated_by.name %></dd>
			<% end %>
		</dd>
		
	<% if not asset_information.pages.blank? %>
		<dt>Linked to from pages</dt>
		<dd>
			<ul>
		<% asset_information.pages.each do |page| %>
			<li>
				<div class="page-title"><%= link_to page.title,  page_edit_url(:id => page.id), :target => '_blank' %></div>
				<div class="page-url"><span>URL</span> <%= page.url %></div>
			</li>
		<% end %>
		</ul>
	<% end %>
	</dl>
<% end %>

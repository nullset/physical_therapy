<div id="asset-panels">
	<% if !@page.id.nil? -%>
	<input type="hidden" id="page-id" value="<%= @page.id %>" />
	<% end -%>

	<div id="asset-upload-panel" class="asset-actions">
		<div class="hd">Please select the files you would like to upload</div>
		<div class="bd">
			<%= render :partial => 'admin/nice_assets/upload' %>
		</div>
	</div>

	<div id="asset-search-panel" class="asset-actions">
		<div class="hd">Search for a file</div>
		<div class="bd">
			<%= render :partial => 'admin/nice_assets/search' %>
		</div>
	</div>
	
	<div id="asset-browser-panel" class="asset-actions">
		<div class="hd">Please select the type of files you would like to find</div>
		<div class="bd">
			<%= render :partial => 'admin/nice_assets/browse' %>
		</div>
	</div>
	
	<div id="asset-browse-pages-panel" class="asset-actions">
		<div class="hd">Please select the site pages that you would like to add</div>
    <%  @javascripts << 'extensions/nice_assets/sitemap' %>
		<div class="bd" id="page-browser">
		</div>
	</div>
	
	<div id="asset-information-panel" class="asset-actions">
		<div class="hd">Asset information</div>
		<div class="bd">
			<div id="asset-information"></div>
		</div>
	</div>
	
</div>